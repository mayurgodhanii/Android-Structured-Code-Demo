<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <dev.studentapp.view.component.textview.TextViewOpenSansItalic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nirav Dangi"
            android:textColor="@android:color/white"
            android:id="@+id/text"
            android:maxLength="15"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_5"
            android:layout_gravity="center_vertical"/>

        <dev.studentapp.view.component.button.ButtonOpenSansBold
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="X"
            android:paddingLeft="4dp"
            android:textSize="@dimen/font_size_4"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:id="@+id/btnClose"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
