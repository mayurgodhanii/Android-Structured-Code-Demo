<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytHtml"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_marginRight="3dp"
        android:id="@+id/imageView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_margin="3dp">

        <dev.studentapp.view.component.textview.TextViewOpenSansSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/txtTitle"
            android:textSize="@dimen/font_size_5"
            android:textColor="@color/text_black"/>
        <dev.studentapp.view.component.textview.TextViewOpenSansItalic
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceSmall"
            android:ellipsize="end"
            android:id="@+id/txtUrl"
            android:textSize="@dimen/font_size_3"
            android:textColor="@color/link_text"
            android:visibility="gone"/>
        <dev.studentapp.view.component.textview.TextViewOpenSansRegular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceSmall"
            android:maxLines="5"
            android:ellipsize="end"
            android:id="@+id/txtDecr"
            android:textSize="@dimen/font_size_4"
            android:textColor="@color/text_gray"/>

    </LinearLayout>

</LinearLayout>
